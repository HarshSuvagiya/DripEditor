<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/growup_laytop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layimage"
                android:layout_width="match_parent"
                android:layout_height="1128px"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/setbg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.scorpion.dripeditor.ViewFolder.MaskableFrameLayout
                    android:id="@+id/frm_mask_animated"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:mask="@drawable/dripbase"
                    app:porterduffxfermode="DST_OUT"
                    >

                    <ImageView
                        android:id="@+id/setimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_launcher_background"/>
                </com.scorpion.dripeditor.ViewFolder.MaskableFrameLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <View
                    android:id="@+id/viewtmp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line3"
                    android:visibility="invisible" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="1080px"
                    android:layout_height="180px"
                    android:visibility="invisible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnshape"
                        android:layout_width="540px"
                        android:layout_height="176px"
                        android:scaleType="centerCrop"
                        android:src="@drawable/drip_button" />

                    <ImageView
                        android:id="@+id/btnbg"
                        android:layout_width="540px"
                        android:layout_height="176px"
                        android:scaleType="centerCrop"
                        android:src="@drawable/background_button" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layprogress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
